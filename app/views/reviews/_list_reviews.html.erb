<% if current_user.reviews.empty? %>
  <%= "You don't have any reviews to display. Check out some recent reviews:" %>
  <%= @recent_reviews.each do |review| %>
    <p>"<%=link_to review.title, [review.game, review] %>"</p>
    <p>"<%= review.content %>"</p>
    <p>Review for <%= link_to review.game.title, game_path(review)%></p>
  <% end %>
<% else %>
  <% current_user.reviews.each do |review|%>
    <p>"<%=link_to review.title, [review.game, review] %>"</p>
    <p>Review for <%= link_to review.game.title, game_path(review)%></p>
  <% end %>
<% end %>
