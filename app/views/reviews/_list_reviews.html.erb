<% if current_user.reviews.empty? %>
  <%= "You don't have any reviews to display. Check out some recent reviews by other users:" %>
  <%= @recent_reviews.each do |review| %>
    <p>"<%=review.title %>"</p>
    <p>"<%= review.content %>"</p>
    <p>Review for <%= review.game.title%></p>
  <% end %>
<% else %>
  <% current_user.reviews.each do |review|%>
    <p>"<%=link_to review.title, game_review_path(review.game, review) %>"</p>
    <p><%= review.content %></p>
    <p>Review for <%= link_to review.game.title, game_path(review.game, review)%></p>
  <% end %>
<% end %>
